#--------------------------------------------Se define la función principal
def main():
    pais=input("¡Hey!\n\n¡Juguemos un juego!\n\nDime un país de América del Sur ")
    if "rgentina" in pais:
        arg()
    elif "olivia" in pais:
        bol()
    elif "rasil" in pais:
        brasil()
    elif "hile" in pais:
        chile()
    elif "olombia" in pais:
        col()
    elif "cuador" in pais:
        ecu()
    elif "uyana" in pais:
        guy()
    elif "araguay" in pais:
        para()
    elif "eru" in pais or "erú" in pais:
        peru()
    elif "urinam" in pais:
        suri()
    elif "rinidad" in pais:
        trini()
    elif "ruguay" in pais:
        uru()
    elif "enezuela" in pais:
        vene()
    elif "uayana" in pais:
        guay()
#--------------------------------------------Si se ingresa algo que no concuerda se pregunta si se trata de un país correcto
    else:
        print("\n¿Cómo dices?\n\n¿Ese es un país de América del Sur?")
main()
